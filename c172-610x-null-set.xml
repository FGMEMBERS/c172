<?xml version="1.0"?>
<!--
************************************************************************
FDM-independent Cessna 172 with full-screen, high-res panel.

Started October 23 2001 by John Check, fgpanels@rockfish.net
************************************************************************
-->

<PropertyList>

 <sim>

  <description>Cessna 172 with a full screen, hi-res panel</description>
 
  <!-- We want to be able to specify the flight model independently -->
  <!-- <flight-model archive="y">jsb</flight-model> -->
  <!-- <aero archive="y">c172</aero> -->
  <flight-model archive="y">null</flight-model>

  <panel>
   <path>Aircraft/c172/Panels/c172-610x-panel.xml</path>
   <visibility archive="y">true</visibility>
   <flip-x>true</flip-x>
  </panel>

  <model>
   <path archive="y">Aircraft/c172r/Models/c172-dpm.xml</path>
  </model>

  <instrument-options>
    <omit-knobs>true</omit-knobs>
  </instrument-options>

  <systems>
   <autopilot>
    <path>Aircraft/c172/610x-autopilot.xml</path>
   </autopilot>
    <electrical>
      <path>Aircraft/c172/c172-electrical.xml</path>
    </electrical>
  </systems>

  <sound>
   <path archive="y">Aircraft/c172/c172-sound.xml</path>
  </sound>

  <help>
   <title>Cessna 172</title>
  </help>

 </sim>
  
 <instrumentation>
  <attitude-indicator>
   <config>
    <tumble-flag archive="y" type="bool">true</tumble-flag>
   </config>
  </attitude-indicator>
 </instrumentation>

 <controls>
  <engines>
   <engine n="0">
    <magnetos>3</magnetos>
   </engine>
  </engines>
 </controls>

 <engines>
  <engine>
   <rpm type="double">0</rpm>
  </engine>
 </engines>

</PropertyList>
